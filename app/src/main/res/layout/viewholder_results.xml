<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_hotel"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/name_hotel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/stars_hotel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_hotel"
        android:text="Nome do Hotel"
        android:textAlignment="viewStart"
        android:gravity="start"
        />

    <androidx.appcompat.widget.AppCompatRatingBar
        android:id="@+id/stars_hotel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/name_hotel"
        app:layout_constraintTop_toBottomOf="@id/image_hotel"/>

    <TextView
        android:id="@+id/city_hotel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/stars_hotel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/name_hotel"
        android:text="Cidade"
        android:textAlignment="viewStart"
        android:gravity="start"
        />

    <TextView
        android:id="@+id/state_hotel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/stars_hotel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/city_hotel"
        android:text="Estado"
        android:textAlignment="viewStart"
        android:gravity="start"
        />

    <TextView
        android:id="@+id/price_hotel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/stars_hotel"
        android:text="PreÃ§o"
        android:textAlignment="viewStart"
        android:gravity="start"
        />

    <TextView
        android:id="@+id/amenities1_hotel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/price_hotel"
        android:text="Amenidade 1"
        android:textAlignment="viewStart"
        android:gravity="start"
        />

    <TextView
        android:id="@+id/amenities2_hotel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/amenities1_hotel"
        android:text="Amenidade 2"
        android:textAlignment="viewStart"
        android:gravity="start"
        />

    <TextView
        android:id="@+id/amenities3_hotel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/amenities2_hotel"
        android:text="Amenidade 3"
        android:textAlignment="viewStart"
        android:gravity="start"
        />


</androidx.constraintlayout.widget.ConstraintLayout>