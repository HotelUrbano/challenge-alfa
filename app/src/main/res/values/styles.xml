<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppTheme.ActionBar.Transparent" parent="AppTheme">
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="Titles">
        <item name="android:textSize">18.5sp</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:lineSpacingExtra">10sp</item>
        <item name="android:textColor">@color/dark</item>
        <item name="fontFamily">@font/robotobold</item>
    </style>

    <style name="Display">
        <item name="android:textSize">15.5sp</item>
        <item name="android:textColor">@color/light</item>
        <item name="fontFamily">@font/robotobold</item>
    </style>


    <style name="Results">
        <item name="android:textSize">15.5sp</item>
        <item name="android:textColor">@color/dark</item>
        <item name="fontFamily">@font/robotobold</item>
    </style>

    <style name="Results_medium">
        <item name="android:textSize">15.5sp</item>
        <item name="android:textColor">@color/dark</item>
        <item name="fontFamily">@font/robotomedium</item>
    </style>

    <style name="Amenities_list">
        <item name="android:textSize">14.5sp</item>
        <item name="android:textColor">@color/dark</item>
        <item name="fontFamily">@font/robotoregular</item>
    </style>

    <style name="LongText">
        <item name="android:textSize">15.5sp</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:lineSpacingExtra">10sp</item>
        <item name="android:textColor">@color/dark</item>
        <item name="fontFamily">@font/robotoregular</item>
    </style>


</resources>
